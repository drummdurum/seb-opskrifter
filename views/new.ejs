<!DOCTYPE html>
<html lang="da">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Opskrifter</title>
  <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-sand-light min-h-screen">
  <nav class="bg-warm-beige shadow-md mb-8 border-b-4 border-red-accent">
    <div class="container mx-auto px-4 py-4">
      <div class="flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-dark-brown">üç≥ Opskrifter</a>
        <div class="flex gap-4">
          <a href="/" class="text-dark-brown hover:text-red-accent transition-colors duration-200">Alle opskrifter</a>
          <a href="/tags" class="text-dark-brown hover:text-red-accent transition-colors duration-200">Tags</a>
          <a href="/ny" class="btn-primary">+ Ny opskrift</a>
        </div>
      </div>
    </div>
  </nav>

  <main class="container mx-auto px-4 pb-12">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-3xl font-bold text-dark-brown mb-6"><%= title %></h1>

      <% if (typeof error !== 'undefined') { %>
        <div class="bg-red-100 border-2 border-red-accent text-red-accent px-4 py-3 rounded mb-6">
          <%= error %>
        </div>
      <% } %>

      <!-- JSON Import Section -->
      <div class="bg-warm-taupe rounded-lg shadow-md p-4 sm:p-6 mb-6 sm:mb-8">
        <h2 class="text-lg sm:text-xl font-bold text-dark-brown mb-3 sm:mb-4">üìã Importer fra JSON</h2>
        <p class="text-xs sm:text-sm text-tree-brown mb-2 sm:mb-3">Klistre et JSON-objekt med opskriftsdata her:</p>
        <textarea 
          id="jsonImport" 
          class="w-full px-3 sm:px-4 py-2 border-2 border-warm-beige rounded-lg focus:outline-none focus:ring-2 focus:ring-red-accent font-mono text-xs sm:text-sm"
          rows="5"
          placeholder='{"titel": "Min opskrift", "ingredienser": ["2 l√∏g"], "instructions": "Sk√¶r l√∏gene...", "how_many_servings": 4}'
        ></textarea>
        <button 
          type="button" 
          id="importBtn" 
          class="mt-2 sm:mt-3 btn-primary text-sm sm:text-base py-2 px-4 w-full sm:w-auto"
        >
          üì• Importer JSON
        </button>
      </div>

      <form action="/recipes" method="POST" enctype="multipart/form-data" accept-charset="UTF-8" class="bg-white rounded-lg shadow-md p-4 sm:p-6">
        
        <!-- Titel -->
        <div class="mb-6">
          <label for="titel" class="block text-dark-brown font-semibold mb-2">
            Titel <span class="text-red-accent">*</span>
          </label>
          <input 
            type="text" 
            id="titel" 
            name="titel" 
            required
            maxlength="100"
            class="w-full px-4 py-2 border-2 border-warm-taupe rounded-lg focus:outline-none focus:ring-2 focus:ring-red-accent"
            placeholder="F.eks. Tomatsuppe med suppenudler"
          >
        </div>

        <!-- Ingredienser -->
        <div class="mb-6">
          <label for="ingredienser" class="block text-dark-brown font-semibold mb-2">
            Ingredienser <span class="text-red-accent">*</span>
            <span class="text-sm font-normal text-tree-brown">(√©n pr. linje)</span>
          </label>
          <textarea 
            id="ingredienser" 
            name="ingredienser" 
            rows="8"
            required
            class="w-full px-4 py-2 border-2 border-warm-taupe rounded-lg focus:outline-none focus:ring-2 focus:ring-red-accent"
            placeholder="2 l√∏g, finthakkede&#10;2 fed hvidl√∏g, finthakkede&#10;1 porre, i tynde ringe"
          ></textarea>
        </div>

        <!-- Fremgangsm√•de -->
        <div class="mb-6">
          <label for="instructions" class="block text-dark-brown font-semibold mb-2">
            Fremgangsm√•de <span class="text-red-accent">*</span>
            <span class="text-sm font-normal text-tree-brown">(√©t trin pr. linje)</span>
          </label>
          <textarea 
            id="instructions" 
            name="instructions" 
            rows="10"
            required
            class="w-full px-4 py-2 border-2 border-warm-taupe rounded-lg focus:outline-none focus:ring-2 focus:ring-red-accent"
            placeholder="Varm olie op i en gryde...&#10;Tils√¶t kartofler..."
          ></textarea>
        </div>

        <!-- Antal portioner -->
        <div class="mb-6">
          <label for="how_many_servings" class="block text-dark-brown font-semibold mb-2">
            Antal portioner
          </label>
          <input 
            type="number" 
            id="how_many_servings" 
            name="how_many_servings" 
            min="1"
            value="4"
            class="w-full px-4 py-2 border-2 border-warm-taupe rounded-lg focus:outline-none focus:ring-2 focus:ring-red-accent"
          >
        </div>

        <!-- Tags -->
        <div class="mb-6">
          <label for="tags" class="block text-dark-brown font-semibold mb-2">
            Tags <span class="text-sm font-normal text-tree-brown">(kommasepareret)</span>
          </label>
          <input 
            type="text" 
            id="tags" 
            name="tags" 
            class="w-full px-4 py-2 border-2 border-warm-taupe rounded-lg focus:outline-none focus:ring-2 focus:ring-red-accent"
            placeholder="pasta, suppe, vegansk, dessert"
          >
          <p class="text-sm text-tree-brown mt-1">F.eks: pasta, suppe, vegansk, dessert, gryde, salat</p>
        </div>

        <!-- Til servering -->
        <div class="mb-6">
          <label for="til_servering" class="block text-dark-brown font-semibold mb-2">
            Til servering <span class="text-sm font-normal text-tree-brown">(√©n pr. linje)</span>
          </label>
          <textarea 
            id="til_servering" 
            name="til_servering" 
            rows="3"
            class="w-full px-4 py-2 border-2 border-warm-taupe rounded-lg focus:outline-none focus:ring-2 focus:ring-red-accent"
            placeholder="1 dl creme fraiche 18%&#10;Frisk timian"
          ></textarea>
        </div>

        <!-- Billede -->
        <div class="mb-6">
          <label for="billede" class="block text-dark-brown font-semibold mb-2">
            Billede <span class="text-sm font-normal text-tree-brown">(valgfrit, max 5MB)</span>
          </label>
          <input 
            type="file" 
            id="billede" 
            name="billede" 
            accept="image/*"
            class="w-full px-4 py-2 border-2 border-warm-taupe rounded-lg focus:outline-none focus:ring-2 focus:ring-red-accent"
          >
        </div>

        <!-- Buttons -->
        <div class="flex flex-col sm:flex-row gap-3">
          <button type="submit" class="btn-primary py-2 px-4 text-sm sm:text-base flex-1 sm:flex-none">üíæ Gem opskrift</button>
          <a href="/" class="btn-secondary py-2 px-4 text-sm sm:text-base text-center flex-1 sm:flex-none">Annuller</a>
        </div>
      </form>
    </div>
  </main>

  <footer class="bg-dark-brown text-sand-light text-center py-4 mt-12 border-t-4 border-red-accent">
    <p>&copy; <%= new Date().getFullYear() %> Opskrifter Database</p>
  </footer>

  <script src="/js/main.js"></script>
  <script>
    // JSON Import Handler
    document.getElementById('importBtn').addEventListener('click', function() {
      const jsonText = document.getElementById('jsonImport').value.trim();
      
      if (!jsonText) {
        alert('Inds√¶t venligst JSON-data');
        return;
      }

      try {
        const recipe = JSON.parse(jsonText);
        
        // Populate titel
        if (recipe.titel) {
          document.getElementById('titel').value = recipe.titel;
        }

        // Populate ingredienser (array -> textarea)
        if (recipe.ingredienser && Array.isArray(recipe.ingredienser)) {
          const ingredienserText = recipe.ingredienser.join('\n');
          document.getElementById('ingredienser').value = ingredienserText;
          console.log('‚úÖ ingredienser set to:', ingredienserText);
        } else {
          console.warn('‚ö†Ô∏è ingredienser is not an array or missing:', recipe.ingredienser);
        }

        // Populate instructions (string -> textarea)
        if (recipe.instructions) {
          document.getElementById('instructions').value = recipe.instructions;
          console.log('‚úÖ instructions set to:', recipe.instructions);
        }

        // Populate how_many_servings
        if (recipe.how_many_servings) {
          document.getElementById('how_many_servings').value = recipe.how_many_servings;
        }

        // Populate tags
        if (recipe.tags && Array.isArray(recipe.tags)) {
          document.getElementById('tags').value = recipe.tags.join(', ');
        }

        // Populate til_servering (array -> textarea)
        if (recipe.til_servering && Array.isArray(recipe.til_servering)) {
          document.getElementById('til_servering').value = recipe.til_servering.join('\n');
        }

        alert('‚úÖ JSON importeret succesfuldt! Formularfelterne er udfyldt.');
        
        // Scroll to form
        document.querySelector('form').scrollIntoView({ behavior: 'smooth' });
      } catch (error) {
        alert('‚ùå Fejl ved JSON parsing:\n' + error.message);
        console.error('JSON Import Error:', error);
      }
    });

    // Allow Enter in textarea without triggering form submit
    document.getElementById('jsonImport').addEventListener('keydown', function(e) {
      if (e.key === 'Enter' && e.ctrlKey) {
        document.getElementById('importBtn').click();
      }
    });
  </script>
</body>
</html>
