<!DOCTYPE html>
<html lang="da">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Opskrifter</title>
  <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-sand-light min-h-screen">
  <nav class="bg-warm-beige shadow-md mb-8 border-b-4 border-red-accent">
    <div class="container mx-auto px-4 py-4">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <a href="/" class="text-2xl font-bold text-dark-brown">üç≥ Opskrifter</a>
        <div class="flex flex-wrap gap-4 items-center">
          <a href="/" class="text-dark-brown hover:text-red-accent transition-colors duration-200">Alle opskrifter</a>
          <a href="/tags" class="text-dark-brown hover:text-red-accent transition-colors duration-200">Tags</a>
          <a href="/ny" class="btn-primary">+ Ny opskrift</a>
        </div>
      </div>
    </div>
  </nav>

  <main class="container mx-auto px-4 pb-12">
    <div class="max-w-4xl mx-auto">
      <!-- Recipe Header -->
      <% if (recipe.billede) { %>
        <img 
          src="/uploads/<%= recipe.billede %>" 
          alt="<%= recipe.titel %>"
          class="w-full h-64 md:h-96 object-cover rounded-lg shadow-lg mb-6"
        >
      <% } %>

      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h1 class="text-3xl md:text-4xl font-bold text-dark-brown mb-4"><%= recipe.titel %></h1>
        
        <div class="flex items-center gap-4 text-tree-brown mb-4">
          <span>üë• <%= recipe.how_many_servings %> portioner</span>
          <span>üìÖ <%= new Date(recipe.createdAt).toLocaleDateString('da-DK') %></span>
        </div>

        <% if (recipe.tags && recipe.tags.length > 0) { %>
          <div class="mb-4">
            <% recipe.tags.forEach(tag => { %>
              <a href="/tag/<%= tag %>" class="tag"><%= tag %></a>
            <% }) %>
          </div>
        <% } %>

        <div class="flex flex-col sm:flex-row gap-2 flex-wrap">
          <a href="/recipe/<%= recipe._id %>/edit" class="btn-secondary text-sm sm:text-base py-2 px-4">‚úèÔ∏è Rediger</a>
          <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST" 
                onsubmit="return confirmDelete('<%= recipe.titel %>')" class="inline w-full sm:w-auto">
            <button type="submit" class="btn-danger w-full sm:w-auto text-sm sm:text-base py-2 px-4">üóëÔ∏è Slet</button>
          </form>
        </div>
      </div>

      <!-- Ingredients -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-2xl font-semibold text-dark-brown">Ingredienser</h2>
          <button id="resetIngredients" class="btn-secondary text-sm">‚Üª Reset</button>
        </div>
        <ul class="space-y-2">
          <% recipe.ingredienser.forEach(ingredient => { %>
            <li class="ingredient-item flex items-start gap-2 p-2 hover:bg-sand-light rounded">
              <span class="text-tree-brown"><%= ingredient %></span>
            </li>
          <% }) %>
        </ul>
      </div>

      <!-- Instructions -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-2xl font-semibold text-dark-brown mb-4">Fremgangsm√•de</h2>
        <div class="text-tree-brown leading-relaxed space-y-3">
          <% recipe.instructions.split('.').filter(s => s.trim()).forEach((sentence, index) => { %>
            <p><%= sentence.trim() %>.</p>
          <% }) %>
        </div>
      </div>

      <!-- Serving suggestions -->
      <% if (recipe.til_servering && recipe.til_servering.length > 0) { %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-2xl font-semibold text-dark-brown mb-4">Til servering</h2>
          <ul class="space-y-2">
            <% recipe.til_servering.forEach(item => { %>
              <li class="flex items-start gap-2">
                <span class="text-red-accent">‚Ä¢</span>
                <span class="text-tree-brown"><%= item %></span>
              </li>
            <% }) %>
          </ul>
        </div>
      <% } %>
    </div>
  </main>

  <footer class="bg-dark-brown text-sand-light text-center py-4 mt-12 border-t-4 border-red-accent">
    <p class="text-sm sm:text-base">&copy; <%= new Date().getFullYear() %> Opskrifter Database</p>
  </footer>

  <script src="/js/main.js"></script>
</body>
</html>
